{
    "servers": {
        "terraform": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-p",
                "8080:8080",
                "-e",
                "TRANSPORT_MODE=streamable-http",
                "-e",
                "TRANSPORT_HOST=0.0.0.0",
                "hashicorp/terraform-mcp-server:latest"
            ]
        }
    }
}
